{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "auto-imports.d.ts",
    "components.d.ts",
    "../common/**/*",
    "../common-client/src/**/*",
    "src/**/*",
    "src/**/*.vue",
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@common/*": ["../common/*"],
      "@common-client/*": ["../common-client/src/*"],
      "@/*": ["./src/*"]
    }
  }
}
